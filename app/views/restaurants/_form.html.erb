
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: "Restaurant name" %>
    <%= f.input :address, label: false, placeholder: "Restaurant address" %>
    <%= f.input :phone_number, label: false, placeholder: "Restaurant Phone Number" %>
    <%= f.input :category, label: false, placeholder: "Restaurant Category" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
